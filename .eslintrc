{
	"parser": "babel-eslint",
	"extends": [
		"airbnb"
	],
	"rules": {
		"import/extensions": "off",
		"import/no-unresolved": "off",
		"import/no-extraneous-dependencies": [
			"error",
			{"devDependencies": ["**/*.test.js", "**/*.spec.js", "**/*.stories.js"]}
		],
		"react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
	}
}
